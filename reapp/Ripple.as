package{	import caurina.transitions.Tweener;	import flash.display.MovieClip;	import flash.display.Sprite;		public class Ripple extends Sprite{				public var cMask:Sprite = new Sprite;		public var circles:Sprite = new Sprite;				public function Ripple(){						//create mask circle			cMask.graphics.beginFill(0x000000, 1);			cMask.graphics.drawCircle(0, 0, 30);			cMask.graphics.endFill();			addChild(cMask);						circles.graphics.lineStyle(1, 0xff0000, 1);			circles.graphics.drawCircle(0, 0, 5);			circles.graphics.lineStyle(2, 0xff0000, 1);			circles.graphics.drawCircle(0, 0, 10);			circles.graphics.lineStyle(4, 0xff0000, 1);			circles.graphics.drawCircle(0, 0, 20);			//circles.graphics.lineStyle(6, 0xff0000, 1);			//circles.graphics.drawCircle(0, 0, 25);						addChild(circles);			circles.alpha = 0.2;			circles.mask = cMask;		}				public function RipPulse(){			Tweener.addTween(this.circles, {scaleX:2, scaleY:2, time:.3, transition:"linear"});			Tweener.addTween(this.circles, {scaleX:.3, scaleY:.3, time:.4, delay:.3, transition:"linear"});		}			}}